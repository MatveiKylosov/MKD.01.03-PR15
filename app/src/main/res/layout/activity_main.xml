<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Запись">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/recordStartButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="recordStart"
                android:text="Старт"
                android:layout_marginRight="20dp"/>

            <Button
                android:id="@+id/recordStopButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="recordStop"
                android:text="Стоп"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Воспроизвести"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/playStartButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="playStart"
                android:layout_marginRight="20dp"
                android:text="Старт"/>

            <Button
                android:id="@+id/playStopButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="playStop"
                android:text="Стоп"/>

        </LinearLayout>

        <EditText
            android:id="@+id/fileNameInput"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:hint="Введите название файла"
            android:inputType="text"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</FrameLayout>
